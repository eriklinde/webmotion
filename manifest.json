
{
  "manifest_version": 2,
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "name": "KeySurf",
  "version": "1.0",
  "description": "Mouseless web browsing",
  "permissions": [ 
    "tabs", "http://*/", "https://*/" 
  ],

  "browser_action": {
    "name": "Manipulate DOM",
    "icons": ["icon.png"],
    "default_icon": "icon.png"
  },
  
  "content_scripts": [ {
    "js": [ "jQuery.js", "jQuery.scrollTo.js", "keysurfHelpers.js", "iColor.js", "keysurf.js" ],
    "matches": [ "http://*/*", "https://*/*"], 
    "exclude_globs": [""]
  }]
}