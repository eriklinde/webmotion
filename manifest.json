{
  "manifest_version": 2,
  
  
  "background": {
    "scripts": ["background.js"]
    },

    "name": "WebMotion",
    "version": "1.0",
    "description": "Simple, mouseless web browsing",
    "permissions": [ 
    "tabs", "http://*/", "https://*/" 
    ],

    "browser_action": {
      "name": "Manipulate DOM",
      "default_icon": "icon128.png"
      },

      "browser_action": {
        "default_icon": {                    
          "19": "icon19.png",         
          "38": "icon38.png",
          "48": "icon48.png",
          "128": "icon128.png"
          },
          "default_title": "WebMotion"
          },

          "content_scripts": [ {
            "js": [ "jQuery.js", "jQueryEasing.js", "jQuery.scrollTo.js", "webMotionHelpers.js", "iColor.js", "webMotion.js" ],
            "matches": [ "http://*/*", "https://*/*"], 
            "exclude_globs": ["*google.com*"]
            }]
          }